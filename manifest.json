{
  "manifest_version": 2,

  "name": "Safari Books Download",
  "description": "Download the books into mhtml files. Safaribooks subscription Required. Works only on learning.oreilly.com domain.",
  "version": "1.5.1",

  "background": {
    "scripts": ["tether.min.js","jquery-3.1.1.slim.min.js","bootstrap.min.js","jspdf.min.js","api.js","bluebird.js", "jszip.js"],
    "persistent": false
  },

  "browser_action": {
    "default_icon": "icon.png",
    "default_popup" : "popup.html",
    "default_title": "Save current book!"
  },

  "permissions": [
    "activeTab",
    "tabs",
    "pageCapture",
    "downloads",
    "storage",
    "unlimitedStorage",
    "*://*.oreilly.com/*"
  ]
}
